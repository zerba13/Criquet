{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!
{% endblock %}

{% block body %}
	<main
		id="main" data-aos="fade-in">

		<!-- ======= Breadcrumbs ======= -->
		<div class="breadcrumbs">
			<div class="container">
				<h2>Nos offres</h2>
				<p>Retrouver toutes nos prestations ci-dessous (formation o√π intervention) en lien avec l'entomologie
				</p>
			</div>
		</div>
		<!-- End Breadcrumbs -->

		<!-- ======= Courses Section ======= -->
		<section id="courses" class="courses">
			<div class="container" data-aos="fade-up">

				<div class="row" data-aos="zoom-in" data-aos-delay="100">
					{% for  product in products  %}
						<div class="col-lg-4 col-md-6 d-flex align-items-stretch">
							<div class="course-item">
								<img src="{{ asset('assets/img/course-1.jpg') }}" class="img-fluid" alt="..." href="">
								<div class="course-content">
									<div class="d-flex justify-content-between align-items-center mb-3">
										{% for category in category %}
											{% if product.idcategory == category.id %}
												<h4>{{ category.name }}</h4>
											{% endif %}
										{% endfor %}


									</div>

									<h3>
										<a href="{{ path('app_formation_detail',{ 'id':product.id}) }}">{{ product.title }}</a>
									</h3>
									<p>{{ product.descriptionshort }}</p>

								</div>
							</div>
						</div>
					{% endfor %}
					<!-- End Course Item-->


				</div>

			</div>
		</section>
		<!-- End Courses Section -->

	</main>
	<!-- End #main -->
{% endblock %}
